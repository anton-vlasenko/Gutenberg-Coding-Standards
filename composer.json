{
  "name": "gutenberg-coding-standards/gbcs",
  "type": "phpcodesniffer-standard",
  "description": "PHP_CodeSniffer rules (sniffs) to enforce Gutenberg coding conventions",
  "keywords": [
    "phpcs",
    "standards",
    "static analysis",
    "Gutenberg"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Contributors",
      "homepage": "https://github.com/anton-vlasenko/Gutenberg-Coding-Standards/graphs/contributors"
    }
  ],
  "require": {
    "php": ">=5.4",
    "ext-filter": "*",
    "squizlabs/php_codesniffer": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0 || ^8.0"
  },
  "suggest": {
    "ext-mbstring": "For improved results"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "run-tests": [
      "@php ./vendor/phpunit/phpunit/phpunit --filter Gutenberg ./vendor/squizlabs/php_codesniffer/tests/AllTests.php"
    ]
  },
  "support": {
    "issues": "https://github.com/anton-vlasenko/Gutenberg-Coding-Standards/issues",
    "wiki": "https://github.com/anton-vlasenko/Gutenberg-Coding-Standards/wiki",
    "source": "https://github.com/anton-vlasenko/Gutenberg-Coding-Standards"
  }
}
